@using Microsoft.AspNetCore.Mvc.TagHelpers
@model QuestionFormModel

@{
    ViewBag.Title = "Add Question";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option1"></label>
                <input asp-for="Option1" class="form-control" placeholder="Option1...">
                <span asp-validation-for="Option1" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option2"></label>
                <input asp-for="Option2" class="form-control" placeholder="Option2...">
                <span asp-validation-for="Option2" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option3"></label>
                <input asp-for="Option3" class="form-control" placeholder="Option3...">
                <span asp-validation-for="Option3" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option4"></label>
                <input asp-for="Option4" class="form-control" placeholder="Option4...">
                <span asp-validation-for="Option4" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectOption"></label>
                <input asp-for="CorrectOption" class="form-control" placeholder="CorrectOption...">
                <span asp-validation-for="CorrectOption" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Points"></label>
                <input asp-for="Points" class="form-control" placeholder="Points...">
                <span asp-validation-for="Points" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageBytes"></label>
                <br/>
                <input asp-for="ImageBytes" type="file" name="imageFile" />
                <span asp-validation-for="ImageBytes" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution"></label>
                <textarea asp-for="Solution" rows="4" class="form-control" placeholder="Explanation..."></textarea>
                <span asp-validation-for="Solution" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId"></label>
                <select asp-for="SubjectId" class="form-control">
                    @foreach (var subject in Model.Subjects)
                    {
                        <option value="@subject.Id">@subject.Name</option>
                    }
                </select>
                <span asp-validation-for="SubjectId" class="small textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicId"></label>
                <select asp-for="TopicId" class="form-control">
                    @foreach (var topic in Model.Topics)
                    {
                        <option value="@topic.Id">@topic.Name</option>
                    }
                </select>
                <span asp-validation-for="TopicId" class="small textdanger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}