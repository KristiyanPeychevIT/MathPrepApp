@using MathPreparationApp.Services.Data.Interfaces
@using MathPreparationApp.Data.Models
@model QuestionDeleteViewModel
@inject ISubjectService SubjectService
@inject ITopicService TopicService
@{
    ViewBag.Title = "Изтрий въпрос";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form asp-action="Delete">
    <div class="row">
        <div class="col-md-8 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="CorrectOption" class="control-label"></label>
                <input asp-for="CorrectOption" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <input asp-for="Points" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Solution" class="control-label"></label>
                <input asp-for="Solution" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                @{
                    Subject subject = await this.SubjectService.GetSubjectByIdAsync(@Model.SubjectId);
                    string subjectName = subject.Name;
                }
                <input asp-for="@subjectName" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Solution" class="control-label"></label>
                @{
                    Topic topic = await this.TopicService.GetTopicByIdAsync(@Model.TopicId);
                    string topicName = topic.Name;
                }
                <input asp-for="@topicName" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-2 text-center">
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </div>
        </div>
    </div>
</form>